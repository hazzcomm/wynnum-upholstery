---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Quality furniture upholstery, boat interiors & caravan reupholstery in Brisbane's Bayside. 40+ years experience. Wynnum, Manly, Redlands." } = Astro.props;
const siteName = "Wynnum Upholstery";
const phone = "0407 650 550";
---

<!doctype html>
<html lang="en-AU">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="upholstery, furniture recovery, boat upholstery, caravan upholstery, antique restoration, Wynnum, Manly, Redlands, Brisbane" />
    <meta name="author" content="Wynnum Redlands Upholsterers" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://wynnumupholstery.com.au" />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | ${siteName}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_AU" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {siteName}</title>

    <!-- Schema.org markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Wynnum Redlands Upholsterers",
      "description": "Quality furniture upholstery, boat interiors & caravan reupholstery in Brisbane's Bayside since 1982.",
      "telephone": "+61407650550",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Wynnum",
        "addressRegion": "QLD",
        "addressCountry": "AU"
      },
      "areaServed": ["Wynnum", "Manly", "Redlands", "Cleveland", "Capalaba", "Brisbane"],
      "priceRange": "$$"
    }
    </script>
  </head>
  <body class="min-h-screen bg-stone-50 text-stone-800">
    <!-- Logo Header -->
    <div class="bg-white py-4 border-b border-stone-200">
      <div class="max-w-5xl mx-auto px-4 text-center">
        <a href="/">
          <img src="/images/wynnum_upholstery_logo.jpg" alt="Wynnum Redlands Upholsterers" class="mx-auto max-w-sm w-full" />
        </a>
      </div>
    </div>

    <!-- Navigation -->
    <header class="bg-stone-700 text-white">
      <div class="max-w-5xl mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div class="flex items-center justify-between md:hidden py-3">
            <span class="text-lg font-semibold">Menu</span>
            <button id="menu-toggle" class="p-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
          <nav id="nav-menu" class="hidden md:block w-full">
            <ul class="flex flex-col md:flex-row md:items-center md:justify-center md:space-x-1 space-y-1 md:space-y-0 py-2 md:py-0">
              <li><a href="/" class="block px-4 py-2 hover:bg-stone-600 transition rounded">Home</a></li>
              <li><a href="/furniture" class="block px-4 py-2 hover:bg-stone-600 transition rounded">Furniture</a></li>
              <li><a href="/boats" class="block px-4 py-2 hover:bg-stone-600 transition rounded">Boats</a></li>
              <li><a href="/caravans" class="block px-4 py-2 hover:bg-stone-600 transition rounded">Caravans</a></li>
              <li><a href="/gallery" class="block px-4 py-2 hover:bg-stone-600 transition rounded">Gallery</a></li>
              <li><a href="/about" class="block px-4 py-2 hover:bg-stone-600 transition rounded">About Us</a></li>
              <li><a href="/contact" class="block px-4 py-2 hover:bg-stone-600 transition rounded">Contact</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <!-- Phone Banner -->
    <div class="bg-amber-600 text-white py-2">
      <div class="max-w-5xl mx-auto px-4 text-center">
        <a href={`tel:${phone.replace(/\s/g, '')}`} class="font-semibold hover:underline">
          Call us: {phone}
        </a>
      </div>
    </div>

    <main class="max-w-5xl mx-auto">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-stone-700 text-white py-8 mt-8">
      <div class="max-w-5xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-bold mb-3">Wynnum Upholstery</h3>
            <p class="text-stone-300 text-sm">Quality upholstery services in Brisbane's Bayside since 1982. Furniture, boats, caravans and more.</p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-3">Contact</h3>
            <p class="text-stone-300 text-sm mb-1">
              <a href={`tel:${phone.replace(/\s/g, '')}`} class="hover:text-amber-400">{phone}</a>
            </p>
            <p class="text-stone-300 text-sm">Wynnum & Redlands Area</p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-3">Services</h3>
            <ul class="text-stone-300 text-sm space-y-1">
              <li><a href="/furniture" class="hover:text-amber-400">Furniture Recovery</a></li>
              <li><a href="/boats" class="hover:text-amber-400">Boat Interiors</a></li>
              <li><a href="/caravans" class="hover:text-amber-400">Caravan Upholstery</a></li>
              <li><a href="/gallery" class="hover:text-amber-400">View Our Work</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-stone-600 mt-6 pt-6 text-center text-stone-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Wynnum Redlands Upholsterers. Serving the Bayside since 1982.</p>
        </div>
      </div>
    </footer>

    <script>
      document.getElementById('menu-toggle')?.addEventListener('click', () => {
        document.getElementById('nav-menu')?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
