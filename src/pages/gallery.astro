---
import Layout from '../layouts/Layout.astro';

const projects = [
  { src: "/images/IMAG0716-Medium.jpg", title: "Victorian Armchairs", category: "Antiques" },
  { src: "/images/restoredfurniture007.jpg", title: "Antique Dressing Table & Stool", category: "Antiques" },
  { src: "/images/dsc00824.jpg", title: "Cane Settee - Tropical Fabric", category: "Furniture" },
  { src: "/images/chair-1-1511.jpg", title: "Two-Seater Lounge", category: "Furniture" },
  { src: "/images/IMG_0272-Medium.jpg", title: "Period Chair with Cane Detail", category: "Antiques" },
  { src: "/images/IMG_0305-Medium.jpg", title: "Recovered Lounge Suite", category: "Furniture" },
  { src: "/images/IMG_0375-Medium.jpg", title: "Custom Upholstery", category: "Furniture" },
  { src: "/images/067-Medium.jpg", title: "Dining Chair Recovery", category: "Furniture" },
  { src: "/images/101-Medium.jpg", title: "Lounge Refurbishment", category: "Furniture" },
  { src: "/images/126.jpg", title: "Before Restoration", category: "Before/After" },
  { src: "/images/IMG_1235-Medium.jpg", title: "Completed Project", category: "Furniture" },
  { src: "/images/dsc00877.jpg", title: "Quality Craftsmanship", category: "Furniture" },
];
---

<Layout title="Gallery" description="View our portfolio of upholstery work - furniture recovery, antique restoration, and custom projects in Brisbane's Bayside.">
  <!-- Hero -->
  <section class="bg-stone-800 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">Our Work</h1>
      <p class="text-xl text-stone-300">Examples of our upholstery and restoration projects</p>
    </div>
  </section>

  <!-- Gallery -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <div class="group relative overflow-hidden rounded-lg shadow-md">
            <img
              src={project.src}
              alt={project.title}
              class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
              <div class="p-4 text-white">
                <h3 class="font-semibold text-lg">{project.title}</h3>
                <p class="text-sm text-stone-300">{project.category}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-stone-100">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Have a Project in Mind?</h2>
      <p class="text-stone-600 mb-8">Send us a photo of your furniture for a free quote.</p>
      <a href="/contact" class="bg-amber-600 text-white px-8 py-3 rounded font-semibold hover:bg-amber-700 transition inline-block">
        Get a Quote
      </a>
    </div>
  </section>
</Layout>
