---
import Layout from '../layouts/Layout.astro';

const projects = [
  { src: "/images/IMAG0716-Medium.jpg", title: "Victorian Armchairs", category: "Antiques" },
  { src: "/images/restoredfurniture007.jpg", title: "Antique Dressing Table & Stool", category: "Antiques" },
  { src: "/images/020-Medium.jpg", title: "Chaise Lounge", category: "Antiques" },
  { src: "/images/dsc00824.jpg", title: "Cane Settee - Tropical Fabric", category: "Furniture" },
  { src: "/images/chair-1-1511.jpg", title: "Two-Seater Lounge", category: "Furniture" },
  { src: "/images/IMG_0272-Medium.jpg", title: "Period Chair with Cane Detail", category: "Antiques" },
  { src: "/images/IMG_0305-Medium.jpg", title: "Recovered Lounge Suite", category: "Furniture" },
  { src: "/images/043-Medium.jpg", title: "Modern Armchair", category: "Furniture" },
  { src: "/images/IMG_0375-Medium.jpg", title: "Custom Upholstery", category: "Furniture" },
  { src: "/images/067-Medium.jpg", title: "Dining Chair Recovery", category: "Furniture" },
  { src: "/images/101-Medium.jpg", title: "Lounge Refurbishment", category: "Furniture" },
  { src: "/images/IMG_0916-Medium.jpg", title: "Yacht Cushions", category: "Boats" },
  { src: "/images/013-Medium.jpg", title: "Caravan Dinette", category: "Caravans" },
  { src: "/images/IMG_1235-Medium.jpg", title: "Completed Project", category: "Furniture" },
  { src: "/images/dsc00877.jpg", title: "Quality Craftsmanship", category: "Furniture" },
];
---

<Layout title="Gallery" description="View our portfolio of upholstery work - furniture recovery, antique restoration, and custom projects in Brisbane's Bayside.">
  <div class="px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Gallery</h1>
    <p class="text-stone-700 mb-6">A selection of our upholstery and restoration projects.</p>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {projects.map((project) => (
        <div class="group">
          <img
            src={project.src}
            alt={project.title}
            class="w-full h-48 object-cover rounded shadow"
            loading="lazy"
          />
          <p class="text-sm text-stone-700 mt-1">{project.title}</p>
          <p class="text-xs text-stone-500">{project.category}</p>
        </div>
      ))}
    </div>

    <div class="mt-8 bg-amber-50 p-6 rounded border border-amber-200">
      <h2 class="text-xl font-bold mb-2">Have a Project in Mind?</h2>
      <p class="text-stone-700 mb-4">Send us a photo of your furniture for a free quote.</p>
      <a href="/contact" class="inline-block bg-amber-600 text-white px-6 py-2 rounded hover:bg-amber-700 transition">
        Contact Us
      </a>
    </div>
  </div>
</Layout>
